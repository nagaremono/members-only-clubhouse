extend layout

block content
  h2 Sign Up
  form(method="POST" action="")
    div(class="form-group row")
      label(for="username" class="col-sm-2 col-form-label") Username
      div(class="col-sm-10")
        input(type="text" class="form-control" id="username" name="username" value=(username ? username : ''))    
    div(class="form-group row")
      label(for="firstname" class="col-sm-2 col-form-label") First name
      div(class="col-sm-10")
        input(type="text" class="form-control" id="firstname" name="firstname" value=(firstname ? firstname : ''))
    div(class="form-group row")
      label(for="lastname" class="col-sm-2 col-form-label") Last name
      div(class="col-sm-10")
        input(type="text" class="form-control" id="lastname" name="lastname" value=(lastname ? lastname : ''))
    div(class="form-group row")
      label(for="password" class="col-sm-2 col-form-label") Password
      div(class="col-sm-10")
        input(type="password" class="form-control" id="password" name="password")
    div(class="form-group row")
      label(for="confirmpassword" class="col-sm-2 col-form-label") Confirm Password
      div(class="col-sm-10")
        input(type="password" class="form-control" id="confirmpassword" name="confirmpassword")
    div(class="form-check")
      input(class="form-check-input" type="radio" name="admin" id="admin" value="admin")
      label(class="form-check-label" for="exampleRadios1") Admin
    div(class="form-group row")
      label(for="admincode" class="col-sm-2 col-form-label") Admin Code
      div(class="col-sm-10")
        input(type="password" class="form-control" id="admincode" name="admincode")  
    div(class="form-group row")
      div(class="col-sm-10")
        button(type="submit" class="btn btn-primary") Sign Up
  
  if errors
    ul
      each error in errors
        li!=error.msg

  if error
    p=error.message