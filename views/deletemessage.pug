extend layout

block content
  h3 Are you sure you want to delete this message?
  div.message
    p=message.title
    p=message.text
    p=message.user.username
    p=message.timestamp
  
  form(action="" method="POST")
    div(class="form-group row")
      div(class="col-sm-10")
        input(type="textarea" class="form-control" id="delete" name="delete" hidden)    
    div(class="form-group row")
      div(class="col-sm-10")
        button(type="submit" class="btn btn-primary") Delete Message