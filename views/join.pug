extend layout

block content
  h2 Join the club by entering the secret code
  form(action="" method="POST")
    div(class="form-group row")
      label(for="passcode" class="col-sm-2 col-form-label") Secret Code
      div(class="col-sm-10")
        input(type="password" class="form-control" id="passcode" name="passcode")    
    div(class="form-group row")
      div(class="col-sm-10")
        button(type="submit" class="btn btn-primary") Join the club
  
  if errors
    ul
      each error in errors
        li!=error.msg